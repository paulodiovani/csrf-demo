extend _layout

block title
  | Contato
  
block content
  div.row
    div.col-md-8
      form(role="form", action="/contact", method="GET")
        div.form-group
          label(for="fullname") Nome
          input#fullname.form-control(name="fullname", placeholder="Nome completo")
        div.form-group
          label(for="email") Endereço de e-mail
          input#email.form-control(name="email", placeholder="Endereço de e-mail")
        div.form-group
          label(for="subject") Assunto
          input#subject.form-control(name="subject", placeholder="Assunto da mensagem")
        div.form-group
          label(for="message") Mensagem
          textarea#message.form-control(name="message", placeholder="Conteúdo da mensagem", rows=6)
        button.btn.btn-lg.btn-block.btn-primary(type="submit") Enviar