doctype html
html
  head
    title 
      block title
      |  - Demonstração de ataque CSRF
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=10")
    meta(name="format-detection", content="telephone=no")
    meta(name="viewport", content="width=1024, user-scalable=yes")
    meta(name="robots", content="all,follow")
    block styles
      link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
      link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
    block scripts
  body
    div.container
      div.row
        div.col-md-12
          div.page-header
            h1 
              | Login 
              small Demonstração de ataque CSRF
    div.container
      div.row
        div.col-md-8
          if errormessage
            div.alert.alert-danger #{errormessage}
          block content
        div.col-md-4
          if username
            div.well
              i.glyphicon.glyphicon-user
              |  #{username}
          ul.nav.nav-pills.nav-stacked
            if username
              li(class=pathname == "/contact" ? "active" : "")
                a(href="/contact") Contato
              li(class=pathname == "/logout" ? "active" : "")
                a(href="/logout") Logout
            else
              li(class=pathname == "/login" || pathname == "/" ? "active" : "")
                a(href="/login") Login